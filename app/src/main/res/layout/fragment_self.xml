<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorselfBg"
    android:scrollbars="none"
    android:padding="8dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="23sp"
            android:gravity="center"
            android:textColor="#232E3C"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <LinearLayout
            android:background="@drawable/fillet"
            android:gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/self_user_llt"
                android:layout_margin="19dp"
                android:orientation="vertical"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:gravity="center"
                android:background="@drawable/shape_round_textview">
                <TextView
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:text="无"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/self_login_tv"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="点击登陆"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/self_register_tv"
                android:layout_margin="10dp"
                android:layout_gravity="bottom"
                android:gravity="right"
                android:textSize="13sp"
                android:textColor="#6060FF"
                android:text="注册新用户"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:textSize="16sp"
                android:layout_margin="11dp"
                android:background="@drawable/fillet"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="订单"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
            <TextView
                android:layout_weight="1"
                android:textSize="16sp"
                android:layout_margin="11dp"
                android:background="@drawable/fillet"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="评价"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
            <TextView
                android:layout_weight="1"
                android:textSize="16sp"
                android:layout_margin="11dp"
                android:background="@drawable/fillet"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="分享链接"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>

        </LinearLayout>

        <LinearLayout
            android:paddingRight="6dp"
            android:background="@drawable/fillet"
            android:layout_marginTop="6dp"
            android:paddingLeft="9dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/setting"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:textColor="#FFF"
                android:textSize="16sp"
                android:text="我的id名称："
                android:layout_marginLeft="3dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <EditText
                android:text="1213899"
                android:enabled="false"
                android:textColor="#FFF"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView

                android:layout_gravity="center_vertical"
                android:src="@drawable/setting"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:background="@drawable/fillet"
            android:paddingLeft="9dp"
            android:paddingRight="6dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/setting"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="位置地址："
                android:layout_marginLeft="3dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <EditText
                android:text="广东珠海唐家湾八一"
                android:enabled="false"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/self_location"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:background="@drawable/fillet"
            android:paddingLeft="9dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/setting"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="我的所有订单"
                android:layout_marginLeft="3dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:background="@drawable/fillet"
            android:paddingLeft="9dp"
            android:paddingRight="6dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/setting"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="当前版本号为："
                android:layout_marginLeft="3dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <EditText
                android:text="1.1.0"
                android:enabled="false"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/version_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>

        <Button
            android:layout_marginTop="16dp"
            android:background="@drawable/fillet"
            android:paddingLeft="9dp"
            android:gravity="center"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="注销账号"
            android:layout_width="match_parent"
            android:layout_height="45dp">
        </Button>

    </LinearLayout>

</ScrollView>